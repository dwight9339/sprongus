# Root .env example for local development

# API server
PORT=3000
HOST=0.0.0.0

# Database (Postgres for API)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/sprongus

# Redis (optional)
REDIS_URL=redis://localhost:6379

# S3-compatible object storage (e.g., MinIO)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=sprongus

