{
  "name": "Sprongus Dev",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/jsburckhardt/devcontainer-features/codex:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/act:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": ["ms-vscode.vscode-typescript-next"]
    }
  },
  "mounts": [
    "source=codex_config,target=/home/node/.codex,type=volume",
    "source=gh_config,target=/home/node/.config/gh,type=volume"
  ],
  "postCreateCommand": "bash -lc \"set -e; mkdir -p ~/.codex ~/.config/gh; sudo chown -R node:node ~/.codex ~/.config/gh; chmod 700 ~/.codex ~/.config/gh; sudo usermod -aG docker node; pnpm install\"",
  "postStartCommand": "bash -lc \"sudo chown -R node:node ~/.codex ~/.config/gh || true\""
}
