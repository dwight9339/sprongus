{
  "name": "@sprongus/db",
  "version": "0.0.0",
  "description": "Drizzle-based database package for Sprongus.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "node ./scripts/run-tests.mjs"
  },
  "dependencies": {
    "@sprongus/core": "workspace:*",
    "better-sqlite3": "^11.7.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.7.1",
    "testcontainers": "^11.7.1"
  }
}
